choice
	prompt "Machine Type"
	depends on STLS2F_SYSTEMS
	default EMTEC_GDIUM

config EMTEC_GDIUM
	bool "Emtec Gdium Liberty 1000 Netbook"
    select CEVT_R4K
    select CSRC_R4K
    select SYS_HAS_CPU_LOONGSON2
    select DMA_NONCOHERENT
    select BOOT_ELF32
    select BOARD_SCACHE
    select HAVE_STD_PC_SERIAL_PORT
    select HW_HAS_PCI
    select IRQ_CPU
    select SYS_SUPPORTS_32BIT_KERNEL
    select SYS_SUPPORTS_64BIT_KERNEL
    select SYS_SUPPORTS_LITTLE_ENDIAN
    select SYS_SUPPORTS_HIGHMEM
    select SYS_HAS_EARLY_PRINTK
    select CPU_HAS_WB
	help
	  Specific support for the Emtec Gdium Liberty 1000 netbook, based on
	  the Loongson-2F CPU.

config GDIUM_VERSION
	int "Gdium Revision"
	depends on EMTEC_GDIUM
	default 3
	help
	  Select the revision of the Emtec Gdium motherboard you have. If you are
	  unsure of what to say, leave this as 3.

endchoice

